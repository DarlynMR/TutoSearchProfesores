<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_15sdp"
    android:backgroundTint="#FFFCFC"
    android:id="@+id/card_ContenidoAmigos"
    android:layout_marginTop="7sp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgEstado"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgCircularAmigos"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_centerVertical="true"
            android:src="@drawable/imageprofile"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/txtnamePersonFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgCircularAmigos"
            android:hint="Nombre (aun sin cargar)"
            android:textSize="@dimen/_14sdp"
            android:layout_marginStart="5dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/ultMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgCircularAmigos"
            android:hint=""
            android:textSize="@dimen/_13sdp"
            android:layout_marginStart="5dp"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:layout_below="@id/txtnamePersonFriend"
            android:maxLines="2"/>





    </RelativeLayout>


</androidx.cardview.widget.CardView>